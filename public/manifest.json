{
  "manifest_version": 3,
  "name": "快磁收藏 (QuickMagnet)",
  "description": "划词收藏 | 整页收藏 | 时间线与卡片 | 本地存储 | 图片分享",
  "version": "1.0.0",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "快磁收藏",
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.svg",
      "48": "icon.svg",
      "128": "icon.svg"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ]
}
